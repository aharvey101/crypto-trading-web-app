<%- include('../partials/header') %>

<div class="container mx-auto rounded mt-5">
  <div class="col-5 mx-auto p-3 text-center">
    <h1><%= `${trade.timeframe} ${trade.pair} ${trade.tradeType}`%></h1>
  </div>
  <div class="col-5 mx-auto p-3 text-center">
    <h2>Entry Shots</h2>
  </div>
  <div class="row d-flex justify-content-around">
    <% trade.entryShots.forEach(img => { %>
    <div class="col-3 m-1">
      <img class="img-thumbnail" src="<%= img %>" alt="" />
    </div>
    <% }); %>
  </div>
  <div class="col-5 mx-auto p-3 text-center">
    <h2>Exit Shots</h2>
  </div>
  <div class="row d-flex justify-content-around">
    <% trade.exitShots.forEach(img => { %>
    <div class=" col-3">
      <img class="img-thumbnail" src="<%= img %>" alt="" />

    </div>
    <% }); %>
  </div>

  <div class="row d-flex mt-5">
    <div class="col">
      <h3>Entry Price:</h3>
      <h3>Stop Price:</h3>
      <h3>Portfolio Size:</h3>
      <h3>Risk Percentage:</h3>
      <h3>Perfect Entry:</h3>
      <h3>Entry Notes:</h3>
    </div>
    <div class="col text-center">
      <h3><%= trade.entryPrice %></h3>
      <h3><%= trade.stopPrice %></h3>
      <h3><%= trade.portfolioSize %></h3>
      <h3><%= trade.riskPercentage %></h3>
      <h3><%= trade.perfectEntry %></h3>
      <p><%= trade.entryNotes %></p>
    </div>
  </div>

  <a href="/report/<%= trade.id %>/edit"><button class="btn btn-danger btn-sm mb-3">Edit</button></a>
</div>

<%- include('../partials/footer') %>