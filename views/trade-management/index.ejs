<%- include('../partials/backend/header') %>

<section>
  <div class="container mx-auto col-7 rounded mt-5 ">
    <div class="col text-center p-3">
      <h1>Your Active Trades</h1>
    </div>
    <table class="table table-sm table-hover table-dark">
      <thead>
        <tr>
          <th scope="col">Entry Date</th>
          <th scope="col">Pair</th>
          <th scope="col">Risk %</th>
          <th scope="col">Entry ‚è±</th>
          <th scope="col">Trade Type</th>
          <th scope="col">Direction</th>
          <th scope="col">Perfect Entry</th>
          <th scope="col">View</th>
        </tr>
      </thead>
      <tbody>
        <% trade.forEach(trade => { %>
        <tr>
          <td><%= trade.entryDate%></td>
          <td><%= trade.pair%></td>
          <td><%= trade.riskPercentage%></td>
          <td><%= trade.timeframe %></td>
          <td><%= trade.tradeType %></td>
          <td><%= trade.direction %></td>
          <td><%= trade.perfectEntry %></td>
          <td>
            <a href="/report/<%= trade.id %>"><button class="btn btn-sm btn-primary">More Info</button></a>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <a href="/report/new"><button class="btn btn-primary btn-sm mb-3">New Trade</button></a>
  </div>
</section>
<%-include('../partials/backend/footer') %>