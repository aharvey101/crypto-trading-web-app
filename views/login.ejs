<%- include('./partials/header') %>

<body>
  <div class="container col-xs-5 col-lg-5 rounded mt-5">
    <form action="/login" method="POST">
      <div class="row">
        <div class="col mx-auto p-3">
          <h3 class="text-center">Sign in</h3>
        </div>
      </div>
      <div class="row">
        <div class="col mx-auto p-3 form-group">
          <label for="username">Username(email)</label>
          <input class="form-control" type="text" name="username" placeholder="your email" />
          <label class="mt-2" for="password">Password</label>
          <input class="form-control" type="password" name="password" placeholder="your password" />
          <input class="btn btn-primary form-control mt-3" type="submit" value="Login" />
        </div>
      </div>
    </form>
  </div>

  <%- include('./partials/footer') %>
</body>