<%- include('../partials/backend/header')%>

<div class="trade-input-container">
  <form action="/trade/<%= trade._id %>?_method=PUT" method='POST' class="trade-input-form ">
    <div class="hero__signup-title h2">Trade Input</div>
    <div class="trade-input-form-control">
      <label for="pair">Pair</label>
      <input class="form-control uppercase" type="text" name="trade[pair]" value="<%= trade.pair %>">
    </div>
    <div class="trade-input-form-control">
      <label for="timeframe">Timeframe</label>
      <input class="form-control" type="text" name="trade[timeframe]" id="" value="<%= trade.timeframe %>">
    </div>
    <div class="trade-input-form-control">
      <label for="tradeType">Trade Type</label>
      <select name="tradeType" id="tradeType">
        <option value="">--Please Choose An Option--</option>
        <option value="trade[cradle]">Cradle</option>
        <option value="trade[breakout]">Breakout</option>
        <option value="trade[fibonacciBooster]">Fibonacci Booster</option>
      </select>
    </div>
    <div class="trade-input-form-control">
      <label for="entryPrice">Entry Price</label>
      <input class="form-control" type="number" name="trade[entryPrice]" id="" value="<%= trade.entryPrice %>">
    </div>
    <div class=" trade-input-form-control">
      <label for="stopPrice">Stop Price</label>
      <input class="form-control" type="number" name="trade[stopPrice]" id="" value="<%= trade.stopPrice %>">
    </div>
    <div class="trade-input-form-control">
      <label for="portfolioSize">Portfolio Size (USD)</label>
      <input class="form-control" type="number" name="trade[invalidationPrice]" id=""
        value="<%= trade.portfolioSize %>">
    </div>
    <div class="trade-input-form-control">
      <label for="riskPercentage">Risk Percentage</label>
      <input class="form-control" type="number" min name="trade[riskPercentage]" id=""
        value="<%= trade.riskPercentage %>">
    </div>
    <div class="trade-input-form-control">
      <label for="entrySnapShot1">Entry Snap Shots (3 minumum)</label>
      <input class="form-control" type="text" name="trade[entryShot1]" id="" value="<%= trade.entryShots.entryShot1 %>">
      <input class="form-control" type="text" name="trade[entryShot2]" id="" value="<%= trade.entryShots.entryShot2 %>">
      <input class="form-control" type="text" name="trade[entryShot3]" id="" value="<%= trade.entryShots.entryShot3 %>">
      <input class="form-control" type="text" name="trade[entryShot4]" id="" value="<%= trade.entryShots.entryShot4 %>">
      <input class="form-control" type="text" name="trade[entryShot5]" id="" value="<%= trade.entryShots.entryShot5 %>">
    </div>
    <div class="trade-input-form-control">
      <label for="entryNotes">Entry Notes</label>
      <textarea name="entryNotes" id="trade[entryNotes]" cols="30" rows="10"><%= trade.entryNotes %></textarea>
    </div>
    <div class="trade-input-form-control">
      <label for="perfectEntry">Perfect Entry</label>
      <input class="form-control" type="checkbox" value="true" name="trade[perfectEntry]" id=""
        value="<%= trade.perfectEntry %>">
    </div>

    <div class="trade-input-form-control">
      <button class="btn btn-small">submit</button>
  </form>
</div>
<%- include('../partials/footer')%>